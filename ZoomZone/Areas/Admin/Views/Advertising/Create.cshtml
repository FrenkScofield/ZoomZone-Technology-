@model Advertising
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Photo"></label>
            <input asp-for="Photo" multiple class="form-control " style="font-size: 23px; width: 75%; border-radius: 15px; margin: 20px 0px; margin-left: 2%;" />
            <span asp-validation-for="Photo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Title" style="font-size: 25px; font-weight: 600;">Write Title</label>

            <input type="text" asp-for="Title" class="from-control" style="font-size: 31px; width: 75%; border-radius: 15px; margin: 20px 0px; margin-left: 2%;" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <input type="submit" class="btn btn-success btn-lg btn-block" value="Submit" />
    </form>

@section scripts
{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}


