@model IEnumerable<SliderHome>
@{
    ViewData["Title"] = "Slider";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<a asp-action="Create" class="btn btn-outline-success btn-block btn-lg" style="margin:10px 0px;">CREATE NEW PRODUCT</a>

<table class="table-bordered table table-striped">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var slider in Model)
        {
            <tr>
                <td>
                    <img src="~/img/slider/@slider.SImage" alt="#" width="100px" height="80px" />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@slider.Id" class="btn btn-warning">
                        <i class="fas fa-pencil-alt"></i>
                    </a>
                    @if (Model.Count() > 2)
                    {
                        <a asp-action="Delete" asp-route-id="@slider.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i>
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
